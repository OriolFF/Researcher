# Environment Configuration

# ============================================
# LLM Provider (Required - Choose One)
# ============================================

# OpenAI
OPENAI_API_KEY=sk-your-key-here
LLM_PROVIDER=openai
LLM_MODEL=gpt-4

# OR Google Gemini
# GOOGLE_API_KEY=your-key-here
# LLM_PROVIDER=gemini  
# LLM_MODEL=gemini-pro

# OR Anthropic Claude
# ANTHROPIC_API_KEY=sk-ant-your-key-here
# LLM_PROVIDER=anthropic
# LLM_MODEL=claude-3-5-sonnet-20241022

# OR OpenRouter
# OPENROUTER_API_KEY=sk-or-your-key-here
# LLM_PROVIDER=openrouter
# LLM_MODEL=anthropic/claude-3.5-sonnet

# OR Ollama (Local - No API key needed)
# LLM_PROVIDER=ollama
# LLM_MODEL=llama2
# OLLAMA_BASE_URL=http://localhost:11434

# ============================================
# Tier 2 Advanced Research (Optional)
# ============================================

# Tavily (Recommended for Tier 2)
# Get free key at: https://tavily.com
# Free tier: 1000 requests/month
TAVILY_API_KEY=tvly-your-key-here

# ============================================
# Agent Configuration
# ============================================

# LLM Settings
MAX_TOKENS=2000
TEMPERATURE=0.1

# Tier Settings
TIER1_ENABLED=true
TIER2_ENABLED=true
TIER1_MAX_SOURCES=10
TIER2_MAX_SOURCES=20

# Escalation Rules
ENABLE_AUTO_ESCALATION=true
ESCALATION_THRESHOLD=0.7
MIN_SOURCES_TIER1=3
MIN_CONFIDENCE_TIER1=0.7

# Citation Settings
CITATION_FORMAT=MLA
INCLUDE_ACCESS_DATES=true

# Output Settings
DEFAULT_OUTPUT_FORMAT=json

# ============================================
# API Settings
# ============================================

API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Settings (for web client)
CORS_ORIGINS=["http://localhost:8000", "http://127.0.0.1:8000"]

# ============================================
# Logging
# ============================================

LOG_LEVEL=INFO
LOG_FORMAT=json
